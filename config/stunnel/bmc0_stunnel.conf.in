foreground = quiet
socket = l:TCP_NODELAY=1
socket = r:TCP_NODELAY=1

[local_bmc]
client = no
accept = @BMC0_STUNNEL_PORT@
connect = @LOCAL_HOST_IP@:@BMC0_RSYNC_PORT@
cert = /etc/phosphor-data-sync/certs/bmc0.cert.pem
key  = /etc/phosphor-data-sync/certs/bmc0.key.pem
CAfile = /etc/phosphor-data-sync/certs/cacert.pem
verify = 2

[sibling_bmc]
client = yes
accept = @LOCAL_HOST_IP@:@BMC1_RSYNC_PORT@
connect = <sibling_bmc_ip>:@BMC1_STUNNEL_PORT@
cert = /etc/phosphor-data-sync/certs/bmc0.cert.pem
key  = /etc/phosphor-data-sync/certs/bmc0.key.pem
CAfile = /etc/phosphor-data-sync/certs/cacert.pem
verify = 2
